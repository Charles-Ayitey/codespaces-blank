{
  "name": "printer-monitor",
  "version": "1.2.0",
  "description": "SNMP-based printer monitoring system with desktop and server modes",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "server": "node server.js",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build": "npm run build:all",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "electron-builder --win --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "build:server": "pkg server.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist/server",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Charles-Ayitey/printer-monitor.git"
  },
  "keywords": ["printer", "snmp", "monitoring", "api", "alerts", "reports", "electron", "desktop"],
  "author": {
    "name": "Printer Monitor Team",
    "email": "harley1362003@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "net-snmp": "^3.11.2",
    "nodemailer": "^6.9.7",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.14.0",
    "dotenv": "^16.3.1",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1"
  },
  "build": {
    "appId": "com.printermonitor.app",
    "productName": "Printer Monitor",
    "copyright": "Copyright Â© 2024 Printer Monitor",
    "publish": null,
    "asar": true,
    "asarUnpack": [
      "node_modules/net-snmp/**",
      "node_modules/raw-socket/**",
      "node_modules/smart-buffer/**",
      "**/*.node"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!build/**",
      "!*.md",
      "!.git/**",
      "!.env",
      "!data/**"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": ["*.example"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "executableName": "printer-monitor"
    },
    "rpm": {
      "fpm": [
        "--after-install", "scripts/rpm-post-install.sh",
        "--rpm-attr", "755,root,root:/opt/Printer Monitor",
        "--rpm-attr", "755,root,root:/opt/Printer Monitor/printer-monitor"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Printer Monitor"
    }
  }
}